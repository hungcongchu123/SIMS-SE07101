@model IEnumerable<WebSIMS.DBContext.Entities.Student>
@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Student";
    var isAdmin = userRole == "Admin";
    var isFaculty = userRole == "Faculty";
    var isStudent = userRole == "Student";
}

<div class="container mt-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-center">
            <h2>Student List</h2>
        </div>
    </div>

    <!-- Thêm nút Register Student -->
    @if (isAdmin || isFaculty)
    {
        <div class="row justify-content-center mb-3">
            <div class="col-md-6 text-center">
                <a asp-controller="Enrollment" asp-action="Index" class="btn btn-primary px-4 me-2">
                    <i class="fas fa-user-plus"></i> Register All Students
                </a>
                @if (isAdmin)
                {
                    <a asp-action="Create" class="btn btn-success px-4">
                        <i class="fas fa-plus"></i> Create New Student
                    </a>
                }
            </div>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Student ID</th>
                        <th>Student Code</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Program</th>
                        <th>Enrollment Date</th>
                        @if (isAdmin || isFaculty)
                        {
                            <th class="text-center" style="width: 280px;">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.StudentID</td>
                            <td>@student.StudentCode</td>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Email</td>
                            <td>@student.Phone</td>
                            <td>@student.Program</td>
                            <td>@(student.EnrollmentDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            @if (isAdmin || isFaculty)
                            {
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        @if (isAdmin)
                                        {
                                            <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        }
                                        <a asp-controller="Enrollment" asp-action="StudentEnrollments" asp-route-studentId="@student.StudentID" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> View Courses
                                        </a>
                                        @if (isAdmin || isFaculty)
                                        {
                                            <form asp-controller="Enrollment" asp-action="Enroll" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="studentId" value="@student.StudentID" />
                                                <input type="hidden" name="courseId" value="0" />
                                                <button type="submit" class="btn btn-sm btn-primary" 
                                                        onclick="return confirm('Đăng ký sinh viên @student.FirstName @student.LastName vào tất cả khóa học?')">
                                                    <i class="fas fa-user-plus"></i> Register
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
