@model List<WebSIMS.DBContext.Entities.StudentCourses>

@{
    ViewData["Title"] = "Course Enrollments";
    var course = ViewBag.Course as WebSIMS.DBContext.Entities.Courses;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Course Enrollments</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="StudentCourses" asp-action="Index">Enrollments</a></li>
        <li class="breadcrumb-item active">Course Enrollments</li>
    </ol>

    @if (course != null)
    {
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-book me-1"></i>
                Course Information
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Course Code:</strong> @course.CourseCode</p>
                        <p><strong>Course Name:</strong> @course.CourseName</p>
                        <p><strong>Credits:</strong> @course.Credits</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Department:</strong> @course.Department</p>
                        <p><strong>Description:</strong> @course.Description</p>
                        <p><strong>Created At:</strong> @(course.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-users me-1"></i>
            Enrolled Students
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <table id="datatablesSimple" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Student Code</th>
                            <th>Student Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Program</th>
                            <th>Enrollment Date</th>
                            <th>Grade</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model)
                        {
                            <tr>
                                <td>@(enrollment.Student?.StudentCode ?? "N/A")</td>
                                <td>@($"{enrollment.Student?.FirstName} {enrollment.Student?.LastName}" ?? "N/A")</td>
                                <td>@(enrollment.Student?.Email ?? "N/A")</td>
                                <td>@(enrollment.Student?.Phone ?? "N/A")</td>
                                <td>@(enrollment.Student?.Program ?? "N/A")</td>
                                <td>@(enrollment.EnrollmentDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@(enrollment.Grade ?? "N/A")</td>
                                <td>
                                    <form asp-action="RemoveEnrollment" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="studentId" value="@enrollment.StudentID" />
                                        <input type="hidden" name="courseId" value="@enrollment.CourseID" />
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Are you sure you want to remove this enrollment?')">
                                            Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    No students are enrolled in this course.
                </div>
            }
        </div>
    </div>

    <div class="mb-3">
        <a asp-controller="StudentCourses" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to All Enrollments
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/sims/js/datatables-simple-demo.js"></script>
}
